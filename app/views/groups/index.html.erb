<h1>Groups</h1>
<div class="row">
  <% @groups.each do |group| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= link_to group.name, group %></h5>
          <p class="card-text"><%= group.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>




